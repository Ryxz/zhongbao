<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dray_line"
    android:orientation="vertical"
    tools:context="com.zhongbao.zhongbao.MainActivity">

    <FrameLayout
        android:id="@+id/main_frame_layout"
        android:background="#dddddd"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent">
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/text_dray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/dray_line"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_linear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/home_iv"
                android:layout_gravity="center_horizontal"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitXY"
                android:src="@mipmap/zb_home_select"/>

            <TextView
                android:id="@+id/home_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/bg_toolbar"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/goods_linear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/goods_iv"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:scaleType="fitXY"
                android:src="@mipmap/zb_goods"/>

            <TextView
                android:id="@+id/goods_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所有商品"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_dray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lateast_linear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/latest_iv"
                android:layout_gravity="center_horizontal"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitXY"
                android:src="@mipmap/zb_latest"/>

            <TextView
                android:id="@+id/lateast_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新揭晓"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_dray"/>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/shopcar_linear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/shop_iv"
                android:layout_gravity="center_horizontal"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitXY"
                android:src="@mipmap/zb_shopcar"/>



            <TextView
                android:id="@+id/tv_goods_number"
                android:layout_marginTop="3dp"
                android:background="@drawable/back"
                android:textSize="11sp"
                android:textColorHint="@color/bg_toolbar"
                android:layout_marginRight="20dp"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:text="4"/>

            <TextView
                android:layout_below="@id/shop_iv"
                android:layout_centerHorizontal="true"
                android:id="@+id/shop_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_dray"/>
        </RelativeLayout>



        <LinearLayout
            android:id="@+id/mine_linear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="3dp"
                android:id="@+id/my_iv"
                android:layout_gravity="center_horizontal"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:scaleType="fitXY"
                android:src="@mipmap/zb_my"/>

            <TextView
                android:id="@+id/mine_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_dray"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
