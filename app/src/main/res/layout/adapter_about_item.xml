<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/about_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="什么是云购"
            android:textColor="@color/text_dray"
            android:layout_marginLeft="10dp"
            android:textSize="11sp"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:id="@+id/about_show_relative"
            android:layout_width="100dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/about_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/arrow"/>
            <ImageView
                android:id="@+id/about_arrow_bottom"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_bottom"/>
        </RelativeLayout>


    </RelativeLayout>


    <include layout="@layout/adapter_about_hide_item"
        />

</LinearLayout>