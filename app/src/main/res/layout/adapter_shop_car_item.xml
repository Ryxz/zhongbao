<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/check_rela"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/shop_click"
                android:layout_centerInParent="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/login_true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/pic_iv"
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/b"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_width="0dp"
        android:layout_weight="1.4"
        android:layout_marginRight="10dp"
        android:layout_height="140dp">

        <LinearLayout
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopcar_name"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:text="香奈儿四件套高级定制你值得拥有非常值得"/>

            <RelativeLayout
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/price_shop"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品价格: ¥58"/>

                <TextView
                    android:textSize="13sp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_toolbar"
                    android:text="1钻/次"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/reduce"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="6dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/reduce_shopcar"/>

                <TextView
                    android:id="@+id/goods_num"
                    android:gravity="center"
                    android:textColor="@color/bg_toolbar"
                    android:text="1"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="57dp"
                    android:layout_height="21dp"
                    android:background="@mipmap/shopcar_bg"/>

                <ImageView
                    android:id="@+id/add"
                    android:padding="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/add_shopcar_"/>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>




</LinearLayout>