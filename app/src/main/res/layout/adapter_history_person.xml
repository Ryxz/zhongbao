<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/dray_line"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="3dp"
        android:textSize="13sp"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:text="第690期(获奖时间:2018-09-20 13:47:12)"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            app:riv_oval="true"
            android:src="@mipmap/mine_head"/>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/his_name"
                android:textColor="@color/text_hint_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="东海小仙女(ID:1021201)"/>

            <TextView
                android:id="@+id/his_id"
                android:textColor="@color/text_hint_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginTop="3dp"
                android:text="用户ID: 1234 (唯一不变的标识)"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获奖号码:"
                    android:textColor="@color/text_hint_color"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/his_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 100400"
                    android:textColor="@color/bottom_tab_select" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <TextView
                    android:textSize="11sp"
                    android:textColor="@color/text_hint_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本期参与人数:"/>

                <TextView
                    android:id="@+id/his_person"
                    android:textColor="@color/colorPrimary"
                    android:text=" 68"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/text_hint_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人次"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>