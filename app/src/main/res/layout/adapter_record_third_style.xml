<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@mipmap/a"/>
        </RelativeLayout>

        <RelativeLayout
            android:paddingTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="2.2"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:text="香奈儿四件套高级定制你值得拥有一套带回家"/>

            <TextView
                android:id="@+id/price"
                android:layout_marginTop="4dp"
                android:textSize="13sp"
                android:layout_below="@id/name"
                android:textColor="@color/text_dray"
                android:text="商品价格:  ¥58"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <LinearLayout
                android:layout_marginTop="7dp"
                android:id="@+id/jiexiao_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint_color"
                    android:text="即将揭晓:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textSize="17sp"
                    android:textColor="#CD3700"
                    android:text="00:19:49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:id="@+id/phone_num"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:layout_below="@id/jiexiao_time"
                android:textColor="#AB82FF"
                android:text="查看我的号码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                android:layout_below="@id/phone_num"
                android:background="#AB82FF"
                android:layout_width="74dp"
                android:layout_height="1dp"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


</LinearLayout>