<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dray_line">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bg_toolbar">

        <RelativeLayout
            android:id="@+id/back_left"
            android:layout_width="100dp"
            android:layout_height="match_parent">

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="注册"/>

        <RelativeLayout
            android:id="@+id/register_login"
            android:layout_width="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="登录"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_left" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phone_rela"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/register_phone_et"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:maxLength="11"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/text_hint_color"
            android:textColor="@color/text_color"
            android:background="@color/dray_line"
            android:singleLine="true"
            android:inputType="number"
            android:hint="请输入您的手机号"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/get_code"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:textColor="#FFA41727"
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:id="@+id/first_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/text_hint_color"/>

    <RelativeLayout
        android:id="@+id/register_yanzheng_rela"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/register_yanzheng_et"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:maxLength="11"
            android:textSize="13sp"
            android:textColor="@color/text_color"
            android:paddingLeft="10dp"
            android:textColorHint="@color/text_hint_color"
            android:inputType="number"
            android:hint="请输入验证码"
            android:background="@color/dray_line"
            android:singleLine="true"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_hint_color"/>

    <RelativeLayout
        android:id="@+id/psd_rela"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/register_psd_et"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:maxLength="11"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/text_hint_color"
            android:hint="设置登录密码(6-16位,英文+数字)"
            android:textColor="@color/text_color"
            android:background="@color/dray_line"
            android:singleLine="true"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/eye"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="12dp"
            android:src="@mipmap/eye"/>

    </RelativeLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/register_yanzheng_rela"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_hint_color"/>

    <RelativeLayout
        android:id="@+id/true_psd_rela"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/register_true_et"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:maxLength="11"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/text_hint_color"
            android:hint="确认登录密码"
            android:textColor="@color/text_color"
            android:background="@color/dray_line"
            android:singleLine="true"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/hide_eye"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:src="@mipmap/eye"/>

    </RelativeLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/register_yanzheng_rela"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_hint_color"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/resgiter_cb"
            android:button="@null"
            android:background="@drawable/register_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:textColor="@color/text_hint_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"/>
        <TextView
            android:id="@+id/register_service_tv"
            android:textColor="#FF6070D5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《服务协议》"/>
        <TextView
            android:textSize="13sp"
            android:textColor="@color/text_hint_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"/>
        <TextView
            android:id="@+id/register_yinsi_tv"
            android:textColor="#FF6070D5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私协议》"/>
    </LinearLayout>

    <TextView
        android:id="@+id/register_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="提交"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:background="@mipmap/button_bg"/>



</LinearLayout>