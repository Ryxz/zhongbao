<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    
    <RelativeLayout
        android:id="@+id/phone_rela"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <EditText
            android:id="@+id/account_phone_et"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:maxLength="11"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/text_hint_color"
            android:inputType="number"
            android:textColor="@color/text_color"
            android:background="@android:color/white"
            android:singleLine="true"
            android:hint="请输入您的手机号"
            android:layout_height="match_parent" />


    </RelativeLayout>

    <View
        android:id="@+id/first_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/phone_rela"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_hint_color"/>

    <RelativeLayout
        android:layout_below="@id/first_line"
        android:id="@+id/yanzheng_rela"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <EditText
            android:id="@+id/psd_et"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:maxLength="11"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:hint="请输入登录密码"
            android:textColor="@color/text_color"
            android:background="@android:color/white"
            android:singleLine="true"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/eye"
            android:padding="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@mipmap/eye"/>

    </RelativeLayout>

    <View
        android:id="@+id/second_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/yanzheng_rela"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_hint_color"/>

    <TextView
        android:id="@+id/forget_psd"
        android:textSize="11sp"
        android:padding="10dp"
        android:textColor="@color/text_hint_color"
        android:layout_below="@id/second_line"
        android:layout_alignParentRight="true"
        android:text="忘记密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/forget_psd"
        android:id="@+id/login_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="登录"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginTop="50dp"
        android:background="@mipmap/button_bg"/>

    <RelativeLayout
        android:id="@+id/fast_login"
        android:layout_marginTop="50dp"
        android:layout_below="@id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/line"/>

        <TextView
            android:textColor="@color/text_hint_color"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速登录"/>

        <TextView
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/line"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/wechat_iv"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fast_login"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/wechat_login"/>

    <TextView
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/wechat_iv"
        android:textColor="@color/text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="微信"/>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/text_hint_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录代表您已同意"/>
        <TextView
            android:id="@+id/account_service_tv"
            android:textColor="#FF6070D5"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《服务协议》"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/text_hint_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"/>
        <TextView
            android:textSize="12sp"
            android:id="@+id/account_yinsi_tv"
            android:textColor="#FF6070D5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私协议》"/>
    </LinearLayout>

</RelativeLayout>