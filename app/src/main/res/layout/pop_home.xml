<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="120dp">
    <ImageView
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/home_saojiao"/>

    <LinearLayout
        android:background="@android:color/white"
        android:id="@+id/yungou_record"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/mine_record"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云购记录"
            android:textColor="@color/text_color"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dray_line"/>

    <LinearLayout
        android:background="@android:color/white"
        android:id="@+id/qr_share"
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="40dp">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/mine_qrcode"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二维码分享"
            android:textColor="@color/text_color"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dray_line"/>

    <LinearLayout
        android:background="@android:color/white"
        android:id="@+id/home_help"
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="40dp">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/mine_help"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助与反馈"
            android:textColor="@color/text_color"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>