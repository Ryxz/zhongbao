<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/phone"/>
        </RelativeLayout>

        <RelativeLayout
            android:paddingTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="2.2"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:text="iPhoneX"/>

            <TextView
                android:id="@+id/price"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:layout_below="@id/name"
                android:textColor="@color/text_dray"
                android:text="商品价格:  ¥8858"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/number"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_below="@id/price"
                android:textColor="@color/text_dray"
                android:text="期数:  第20期"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_below="@id/number"
                android:id="@+id/prograss"
                android:layout_width="190dp"
                android:layout_height="4dp">

                <View
                    android:background="#A8A8A8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <View
                    android:background="@color/bg_toolbar"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/person_num"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:layout_below="@id/prograss"
                android:textColor="@color/text_hint_color"
                android:text="总需人数:  20          剩余人数:  10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/phone_num"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:layout_below="@id/person_num"
                android:textColor="@color/deepskyblue"
                android:text="查看参与号码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:visibility="gone"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                android:layout_below="@id/phone_num"
                android:background="#AB82FF"
                android:layout_width="74dp"
                android:layout_height="1dp"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@+id/prograss"
                android:background="@color/bg_toolbar"
                android:gravity="center"
                android:text="追加"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginRight="13dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>