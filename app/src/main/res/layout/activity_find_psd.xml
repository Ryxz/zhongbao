<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dray_line">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bg_toolbar">

        <RelativeLayout
            android:id="@+id/back_left"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/arrow_left"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="找回密码"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phone_rela"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/psd_phone_et"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:maxLength="11"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:textColor="@color/text_color"
            android:background="@color/dray_line"
            android:singleLine="true"
            android:inputType="number"
            android:hint="请输入您的手机号"
            android:layout_height="match_parent" />

        <TextView
            android:padding="10dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:textColor="@color/red"
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:id="@+id/first_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/text_hint_color"/>

    <RelativeLayout
        android:id="@+id/yanzheng_rela"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/psd_yanzheng_et"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:maxLength="11"
            android:textSize="13sp"
            android:textColor="@color/text_color"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:hint="请输入验证码"
            android:background="@color/dray_line"
            android:singleLine="true"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_hint_color"/>

    <RelativeLayout
        android:id="@+id/psd_rela"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/psd_et"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:maxLength="11"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:hint="设置登录密码(6-16位,英文+数字)"
            android:textColor="@color/text_color"
            android:background="@color/dray_line"
            android:singleLine="true"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/eye"
            android:layout_alignParentRight="true"
            android:padding="13dp"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@mipmap/eye"/>

    </RelativeLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/yanzheng_rela"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_hint_color"/>

    <RelativeLayout
        android:id="@+id/true_psd_rela"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/true_psd_et"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:maxLength="11"
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:hint="确认登录密码"
            android:textColor="@color/text_color"
            android:background="@color/dray_line"
            android:singleLine="true"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/hide_eye"
            android:layout_alignParentRight="true"
            android:padding="13dp"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@mipmap/eye"/>

    </RelativeLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/yanzheng_rela"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_hint_color"/>

    <TextView
        android:id="@+id/find_psd_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="提交"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="50dp"
        android:background="@mipmap/button_bg"/>

</LinearLayout>