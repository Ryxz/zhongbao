<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dray_line">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bg_toolbar">

        <RelativeLayout
            android:id="@+id/back_left"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/arrow_left"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="添加地址"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人:"/>
        <EditText
            android:id="@+id/name_et"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_color"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:textColorHint="@color/text_hint_color"
            android:hint="请填写您的真实姓名"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.8dp"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地区:"/>
        <TextView
            android:id="@+id/tv_address"
            android:textColor="@color/text_color"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:hint="请选择所在区域"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.8dp"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码:"/>
        <EditText
            android:id="@+id/phone_et"
            android:inputType="number"
            android:textColor="@color/text_color"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:textColorHint="@color/text_hint_color"
            android:hint="请输入手机号码"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.8dp"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址:"/>
        <EditText
            android:id="@+id/adress_detail_et"
            android:layout_marginLeft="8dp"
            android:textColor="@color/text_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:textColorHint="@color/text_hint_color"
            android:hint="3-20个字符,不包含特殊字符"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/moren_radio"
            android:padding="12dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/shopcar_noselect"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color"
            android:layout_height="wrap_content"
            android:text="设为默认地址"/>
    </LinearLayout>

    <TextView
        android:id="@+id/add_adress_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="确定"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="80dp"
        android:background="@mipmap/button_bg"/>

</LinearLayout>