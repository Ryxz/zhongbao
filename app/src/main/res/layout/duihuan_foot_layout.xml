<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/dray_line"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_below="@id/duihuan_list"
        android:id="@+id/detail"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="|"
                android:textColor="@color/bg_toolbar"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钻石支付"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/text_color"/>
            <TextView
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dray"
                android:text="(账户余额:10钻石)"/>
        </LinearLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/login_true"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>


    <TextView
        android:layout_below="@id/detail"
        android:id="@+id/total"
        android:layout_marginTop="25dp"
        android:textSize="13sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/bg_toolbar"
        android:layout_gravity="center_horizontal"
        android:text="共计: 20钻石"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/total"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="确定"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/button_bg"/>

</LinearLayout>