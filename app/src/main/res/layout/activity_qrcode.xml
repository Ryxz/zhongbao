<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#80000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        >
        
        <RelativeLayout
            android:id="@+id/shut_clear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/clear_cha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="2">

               <ImageView
                   android:id="@+id/qrcode"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@mipmap/qrcode"
                   android:layout_marginBottom="40dp"/>
               <TextView
                   android:layout_centerHorizontal="true"
                   android:gravity="center_vertical"
                   android:layout_alignParentBottom="true"
                   android:textSize="15sp"
                   android:textColor="@color/text_color"
                   android:layout_width="wrap_content"
                   android:layout_height="40dp"
                   android:text="扫码下载众宝官方APP"/>

           </RelativeLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/dray_line"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:orientation="horizontal"
               android:layout_gravity="center_vertical"
               android:layout_weight="1">

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:gravity="center_vertical"
                   android:layout_height="match_parent">
                   <ImageView
                       android:layout_centerHorizontal="true"
                       android:id="@+id/wechat_iv"
                       android:layout_width="35dp"
                       android:layout_height="35dp"
                       android:src="@mipmap/wechat_help"/>
                   <TextView
                       android:layout_marginTop="5dp"
                       android:textSize="12sp"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@id/wechat_iv"
                       android:textColor="@color/text_dray"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="微信好友"/>
               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:gravity="center_vertical"
                   android:layout_height="match_parent">
                   <ImageView
                       android:layout_centerHorizontal="true"
                       android:id="@+id/friends_iv"
                       android:layout_width="35dp"
                       android:layout_height="35dp"
                       android:src="@mipmap/friends_quan"/>
                   <TextView
                       android:layout_marginTop="5dp"
                       android:textSize="12sp"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@id/friends_iv"
                       android:textColor="@color/text_dray"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="朋友圈"/>
               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:gravity="center_vertical"
                   android:layout_height="match_parent">
                   <ImageView
                       android:layout_centerHorizontal="true"
                       android:id="@+id/qq_iv"
                       android:layout_width="35dp"
                       android:layout_height="35dp"
                       android:src="@mipmap/qq_help"/>
                   <TextView
                       android:layout_marginTop="5dp"
                       android:textSize="12sp"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@id/qq_iv"
                       android:textColor="@color/text_dray"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="QQ好友"/>
               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:gravity="center_vertical"
                   android:layout_height="match_parent">
                   <ImageView
                       android:layout_centerHorizontal="true"
                       android:id="@+id/weibo_iv"
                       android:layout_width="35dp"
                       android:layout_height="35dp"
                       android:src="@mipmap/weibo"/>
                   <TextView
                       android:layout_marginTop="5dp"
                       android:textSize="12sp"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@id/weibo_iv"
                       android:textColor="@color/text_dray"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="微信好友"/>
               </RelativeLayout>

           </LinearLayout>

       </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>