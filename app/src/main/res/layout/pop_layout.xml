<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#80000000"
    >



    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="200dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/weixin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="35dp"
                        android:src="@mipmap/wechat_help"
                        android:layout_height="35dp" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信好友"
                        android:layout_marginTop="10dp"
                        android:textSize="11sp"
                        android:textColor="@color/text_dray"/>
                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/friend"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="35dp"
                        android:src="@mipmap/friends_quan"
                        android:layout_height="35dp" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="朋友圈"
                        android:layout_marginTop="10dp"
                        android:textSize="11sp"
                        android:textColor="@color/text_dray"/>
                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/qq"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="35dp"
                        android:src="@mipmap/qq_help"
                        android:layout_height="35dp" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QQ好友"
                        android:layout_marginTop="10dp"
                        android:textSize="11sp"
                        android:textColor="@color/text_dray"/>
                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/weibo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="35dp"
                        android:src="@mipmap/weibo"
                        android:layout_height="35dp" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微博分享"
                        android:layout_marginTop="10dp"
                        android:textSize="11sp"
                        android:textColor="@color/text_dray"/>
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/bg_toolbar"
                android:background="@mipmap/mine_pay"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="240dp"
        android:layout_height="360dp"
        android:layout_marginBottom="160dp"
        android:src="@mipmap/share_bg"/>

</RelativeLayout>
