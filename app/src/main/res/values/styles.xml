<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!--Appbar背景色，应用的主要色调，actionBar默认使用该颜色-->
        <item name="colorPrimary">@color/bg_toolbar</item>
        <!--状态栏颜色，应用的主要暗色调，statusBarColor默认使用该颜色-->
        <item name="colorPrimaryDark">@color/bg_toolbar</item>
        <!--一般控件的选种效果默认采用该颜色-->
        <item name="colorAccent">@color/bg_toolbar</item>

        <item name="android:statusBarColor" tools:ignore="NewApi">@color/bg_toolbar</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="StyleProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/home_prograss</item>
        <item name="android:progressDrawable">@drawable/progreass_other</item>
    </style>

    <style name="Theme.Translucent" mce_bogus="1" parent="android:style/Theme.Translucent"
        tools:ignore="ResourceCycle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#fff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>
    <style name="edit_AlertDialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 是否启用标题栏 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 是否使用背景半透明 -->
    </style>


    <style name="DialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="radiobutton_right_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/radio_choose</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">#FFFFFF</item>
    </style>


    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="T12Wrap.Black" parent="wrap">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="T14Wrap.White" parent="T14Wrap">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="T14Wrap.Black" parent="T14Wrap">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="T14Wrap" parent="wrap">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="T16Wrap.White" parent="T16Wrap">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="T16Wrap" parent="wrap">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:background">@color/bg_toolbar</item>
    </style>
    <declare-styleable name="TitleBar">
        <attr name="left_text" format="string" />
        <attr name="left_icon" format="reference" />
        <attr name="right_text_color" format="color" />
        <attr name="title_text_color" format="color" />
        <attr name="left_text_color" format="color" />
        <attr name="display_as_home" format="boolean" />
        <attr name="right_icon" format="reference" />
        <attr name="right_text" format="string" />
        <attr name="show_bottom_line" format="boolean" />
    </declare-styleable>

</resources>
